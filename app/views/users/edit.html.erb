<%= form_for(@user) do |f| %>
  <div>
    <%= f.label :username %><br>
    <%= f.text_field :username, :placeholder => "Username" %><br>
    
    <%= f.label :email %><br>
    <%= f.text_field :email, :placeholder => "Email@example.com" %><br>
    
    <%= f.label :password %><br>
    <%= f.password_field :password, :placeholder => "Password" %><br>
    
    <%= f.submit %>
    </div>
<% end %>



<% if @user.errors.any? %>
  <div>
    <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  </div> 
<% end %>

